{
    "diagnostic.displayByAle": true,
    "coc.preferences.colorSupport": true,
    "highlight.document.enable": false,
    "highlight.colors.enable": false,
    "git.enableGutters": false,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "nim": {
            "command": "nimlsp",
            "filetypes": ["nim"]
        }
    }
}
